<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="750.0" prefWidth="850.0" styleClass="create_patient_container" stylesheets="@../../Styles/CreatePatient.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.proj.calproj.Controllers.Admin.CreatePatientController">
   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Create New Patient" AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="14.0" />
      <VBox prefHeight="700.0" prefWidth="600.0" AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="40.0">
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="First Name:"/>
         <TextField fx:id="fName_fld"/>
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Last Name:"/>
         <TextField fx:id="lName_fld"/>
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Password:"/>
         <TextField fx:id="password_fld"/>
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Username:"/>
         <CheckBox fx:id="username_box" mnemonicParsing="false"/>
         <Label fx:id="username_lbl" styleClass="patient_username_lbl"/>
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Gender:"/>
         <TextField fx:id="gender_fld"/>
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Birth Date:"/>
         <TextField fx:id="birth_date_fld"/>
         <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Address:"/>
         <TextField fx:id="address_fld"/>
         <Button fx:id="create_patient_btn" mnemonicParsing="false" text="Create New Patient"/>
         <Label fx:id="error_lbl" styleClass="error_lbl"/>
      </VBox>
   </children>
</AnchorPane>
